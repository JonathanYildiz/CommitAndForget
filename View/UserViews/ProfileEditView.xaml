<Window x:Class="CommitAndForget.View.UserViews.ProfileEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommitAndForget.View.UserViews"
        mc:Ignorable="d"
        Title="ProfileEditView" 
        Height="450" Width="400"
        Style="{StaticResource WindowStyle}">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <TextBlock Grid.Row="0" Grid.Column="0"
             Text="Vorname:"/>
    <TextBox Grid.Row="0" Grid.Column="1"
           Text="{Binding NewUser.FirstName}"/>

    <TextBlock Grid.Row="1" Grid.Column="0"
             Text="Nachname:"/>
    <TextBox Grid.Row="1" Grid.Column="1"
           Text="{Binding NewUser.LastName}"/>

    <TextBlock Grid.Row="2" Grid.Column="0"
             Text="Straße:"/>
    <TextBox Grid.Row="2" Grid.Column="1"
           Text="{Binding NewUser.Street}"/>

    <TextBlock Grid.Row="3" Grid.Column="0"
             Text="Hausnummer:"/>
    <TextBox Grid.Row="3" Grid.Column="1"
           Text="{Binding NewUser.HouseNumber}"/>

    <TextBlock Grid.Row="4" Grid.Column="0"
             Text="PLZ:"/>
    <TextBox Grid.Row="4" Grid.Column="1"
           Text="{Binding NewUser.PostalCode}"/>

    <TextBlock Grid.Row="5" Grid.Column="0"
             Text="Ort:"/>
    <TextBox Grid.Row="5" Grid.Column="1"
           Text="{Binding NewUser.City}"/>

    <TextBlock Grid.Row="6" Grid.Column="0"
             Text="E-Mail:"/>
    <TextBox Grid.Row="6" Grid.Column="1"
           Text="{Binding NewUser.Email}"/>

    <TextBlock Grid.Row="7" Grid.Column="0"
             Text="Passwort:"/>
    <TextBox Grid.Row="7" Grid.Column="1"
            Text="{Binding NewUser.Password}"/>
    <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
      <Button Command="{Binding SaveEditCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">OK</Button>
      <Button Command="{Binding CancelEditCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">Abbrechen</Button>
    </StackPanel>
  </Grid>
</Window>

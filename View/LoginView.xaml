      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/> <!--Column 0-->
        <ColumnDefinition Width="6*"/> <!--Column 1-->
        <ColumnDefinition Width="2*"/> <!--Column 2-->
      </Grid.ColumnDefinitions>

      <TextBox Grid.Row="0" Grid.Column="1" Height="20" Text="{Binding Mail}"></TextBox>

      <TextBox Grid.Row="1" Grid.Column="1" Height="20" Text="{Binding Passwort}"></TextBox>

      <Button Grid.Row="2" Command="{Binding LoginCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"></Button>


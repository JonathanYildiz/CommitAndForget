  <Grid>
    <Image Grid.Column="0"
           Width="auto" Stretch="Fill"
           Source="\Pizza.png"/>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/> <!--Row 0-->
        <RowDefinition Height="*"/> <!--Row 1-->
        <RowDefinition Height="*"/> <!--Row 2-->
        <RowDefinition Height="*"/> <!--Row 3-->
